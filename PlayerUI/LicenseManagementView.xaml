<Window x:Class="PlayerUI.LicenseManagementView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PlayerUI"
        mc:Ignorable="d"
        Title="LicenseManagementView" Height="110" Width="500" WindowStartupLocation="CenterOwner" ResizeMode="NoResize" ShowInTaskbar="False" Icon="{x:Null}">
    <Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="28" />
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*" />
			<ColumnDefinition Width="80" />
		</Grid.ColumnDefinitions>

		<TextBlock VerticalAlignment="Center" Margin="8">Enter valid license code:</TextBlock>
		
		<TextBox x:Name="LicenseCode" Margin="8,0,4,8" Height="24" Grid.Column="0" Grid.Row="1"/>
		<Button x:Name="Validate" Content="Validate" Margin="4,0,8,8" Height="24" Grid.Column="1" Grid.Row="1"/>
		
	</Grid>
</Window>
