<Window x:Class="PlayerUI.YoutubeAddressView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="YoutubeAddressView" Height="80" Width="650" WindowStyle="ToolWindow" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="40" />
			<ColumnDefinition Width="*" />
			<ColumnDefinition Width="80" />
		</Grid.ColumnDefinitions>
		
		<TextBlock Text="Adres:" Grid.Column="0" VerticalAlignment="Center" Margin="5"/>
		<TextBox x:Name="Url" Text="" Grid.Column="1" VerticalAlignment="Center" Margin="5" VerticalContentAlignment="Center" Height="28"/>
		<Button x:Name="Open" Content="Otwórz" Grid.Column="2" VerticalAlignment="Center" Margin="5"/>
    </Grid>
</Window>
