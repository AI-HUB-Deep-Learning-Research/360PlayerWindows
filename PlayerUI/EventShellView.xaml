<Window x:Class="PlayerUI.EventShellView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:cal="http://www.caliburnproject.org" AllowsTransparency="True"
        Title="EventShellView" Height="300" Width="300" WindowState="Maximized" WindowStyle="None" Background="Transparent" Opacity="0">
	<Grid Background="Transparent"
		cal:Message.Attach="[Shortcut Control+Shift+Alt+R] = [Action SwitchMode]; [Shortcut Space] = [Action PlayPause]; [Shortcut Control+Q] = [Action Restart]; [Shortcut Control+R] = [Action Rewind]"
		>
        
    </Grid>
</Window>
