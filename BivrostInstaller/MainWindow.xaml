<Window x:Class="BivrostInstaller.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BivrostInstaller"
        mc:Ignorable="d"
        Title="BIVROST PLAYER SETUP" Height="250" Width="450" ResizeMode="NoResize">
    <Grid>
		<TextBox IsReadOnly="True" BorderBrush="Gray" BorderThickness="1" VerticalAlignment="Top" Margin="8" Height="80"/>
		<ProgressBar x:Name="InstallProgress" Height="28" Margin="8" />
        <Button x:Name="Install" Content="Install" Width="100" Height="28" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="8"/>
    </Grid>
</Window>
