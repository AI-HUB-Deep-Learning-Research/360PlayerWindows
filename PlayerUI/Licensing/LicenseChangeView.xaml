<UserControl x:Class="PlayerUI.Licensing.LicenseChangeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PlayerUI.Licensing"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="500">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="28" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*" />
		</Grid.ColumnDefinitions>

		<TextBlock Grid.Row="0"  VerticalAlignment="Center" Margin="8" 
				   Text="{Binding Message}"/>

		<TextBox x:Name="LicenseCode" Margin="8,0,4,8" Height="24" Grid.Row="1" />

		<DockPanel Grid.Row="2" HorizontalAlignment="Right">
			<Button x:Name="ClearLicense" Content="Clear license and use basic features" Margin="4,0,8,8" Height="24" HorizontalAlignment="Right" Visibility="{Binding ClearLicenseVisible}" />
			<Button x:Name="Validate" Content="Validate" Margin="4,0,8,8" Height="24"  HorizontalAlignment="Right"/>
		</DockPanel>


	</Grid>
</UserControl>
